export EDITOR=nvim

export XDG_DATA_HOME=$HOME/.local/share
export XDG_CONFIG_HOME=$HOME/.config
export XDG_STATE_HOME=$HOME/.local

export PATH=$PATH:$HOME/.local/bin/

# Antigen
source ~/antigen.zsh
antigen init ~/.antigenrc

# Aliases
lg = lazygit

alias l='exa'
alias la='exa -a'
alias ll='exa -lah'
alias ls='exa --color=auto'
