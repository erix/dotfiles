#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "bat"
     "curl"
     "eza"
     "fd"
     "git"
     "git-lfs"
     "gh"
     "lazygit"
     "node"
     "ripgrep"
     "tmux"
     "wget"
     "zoxide" 
-}}

{{ $casks := list 
     "alacritty"
     "font-fira-code-nerd-font"
     "font-roboto-mono-nerd-font"
     "visual-studio-code"
     "vlc"
     "1password-cli"
-}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
